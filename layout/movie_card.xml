<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/moviecardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:onClick="PositionAction"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="TITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="7dp"
            android:id="@+id/mname"/>

            <TextView
                android:text="year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:layout_below="@+id/mname"
                android:id="@+id/myear"/>
            <TextView
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/myear"
                android:layout_below="@+id/mname"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:id="@+id/mtime"
                />
            <TextView
                android:text="genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mtime"
                android:layout_below="@+id/mname"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:id="@+id/mgenre"
                />
            <TextView
                android:text="rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mgenre"
                android:layout_below="@+id/mname"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:id="@+id/mrating"
                />

            <TextView
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:layout_below="@+id/myear"
                android:id="@+id/mdescription"/>
            <TextView
                android:text="cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="3dp"
                android:paddingLeft="7dp"
                android:layout_below="@+id/mdescription"
                android:id="@+id/mcast"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>